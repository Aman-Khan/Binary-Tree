
int maxDepth(Node* root){
    if(root==NULL) return 0;
    int lh = maxDepth(root->left);
    int rh = maxDepth(root->right);
    return 1+max(lh, rh);
}

bool checkForBalancedTree(Node* root){
    if(root==NULL){
        return false;
    }

    int lh = maxDepth(root->left);
    int rh = maxDepth(root->right);
    if(abs(lh-rh)<=1) return true;
    return false;
}
